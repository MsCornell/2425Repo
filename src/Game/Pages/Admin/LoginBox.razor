@page "/LoginBox"

@* This is the page where the login boxes show up *@

<PageTitle>LoginBox</PageTitle>

<div class="login-box">
    <div class="login-header">Login or Sign Up</div>
    <div class="login-description">
        Log in or create an account to play games, participate in challenges, and more.
    </div>
    <div class="button login-button" @onclick="NavigateToLogin">Login</div>
    <div class="button signup-button" @onclick="NavigateToSignup">Create an account</div>
    <div class="button later-button" @onclick="NavigateToStart">Later</div>
</div>

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: Rubik, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #809ED3;
      margin: 0;
    }

    .container {
      width: 100%;
      max-width: 375px;
      padding: 10px;
      background: #809ED3;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      gap: 20px;
    }

    .login-box {
      width: 100%;
      max-width: 343px;
      background-color: white;
      border-radius: 20px;
      padding: 16px;
      border: 1px solid;
      position: relative;
    }

    .login-header {
      text-align: center;
      color: black;
      font-size: 1.6rem;
      font-weight: 500;
      margin-top: 10px;
      margin-bottom: 30px;
    }

    .login-description {
      text-align: center;
      color: #858494;
      font-size: 0.9rem;
      margin-bottom: 30px;
    }

    .button {
      width: 100%;
      padding: 16px;
      text-align: center;
      border-radius: 16px;
      font-size: 1rem;
      font-weight: 500;
      display: block;
      border: 2px solid;
      cursor: pointer;
      box-sizing: border-box;
      margin-bottom: 15px;
    }

    .login-button {
      background-color: #809ED3;
      color: white;
      border-color: #809ED3;
    }

    .signup-button {
      background-color: black;
      color: white;
      border-color: black;
    }

    .later-button {
      color: #809ED3;
      border-color: #809ED3;
    }
  </style>
