@page "/Signup"

<PageTitle>Signup</PageTitle>

    <div class="container">
      <div class="container">
          <div class="inner-container">
              <div class="back-button" @onclick="NavigateToStart1">
                  <div class="arrow"></div>
              </div>
  
        <div class="signup-title">Sign Up</div>
  
        <div class="signup-option">
          <div class="button email-signup" @onclick="NavigateToEmail">
            <img src="/Images/envelope-icon1.jpg" alt="Envelope Icon">
            Sign Up with Email
          </div>
  
          <div class="button microsoft-signup">
            <img src="/Images/microsoftlogo.jpg" alt="Microsoft Logo">
            Sign Up with Microsoft
          </div>
  
          <div class="button google-signup">
            <img src="/Images/googlelogo.jpg" alt="Google Logo">
            Sign Up with Google
          </div>
        </div>
  
          <div class="already-account">
              Already have an account? <span @onclick="NavigateToLogin">Login</span>
          </div>
  
          <div class="terms">
              By continuing, you agree to the <span @onclick="NavigateToTerms">Terms of Services & Privacy Policy</span>.
          </div>
      </div>
    </div>
  </div>

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      }

      body {
      font-family: Rubik, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #809ED3;
      padding: 10px;
      }

      .container {
      width: 100%;
      max-width: 360px;
      background-color: #809ED3;
      }

    .inner-container {
      width: 94%;
      max-width: 354px;
      margin: 60px auto 0; 
      background-color: white;
      border-radius: 20px;
      padding: 20px;
      border: 1px solid;
      position: relative;
    }

    .signup-title {
      text-align: center;
      color: #0C092A;
      font-size: 24px;
      font-weight: 500;
      margin-bottom: 30px; 
    }

    .signup-option {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 20px;
    }

    .button {
      width: 100%;
      padding: 16px;
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 16px;
      font-size: 16px;
      font-weight: 500;
      cursor: pointer;
    }

    .email-signup {
      background-color: black;
      color: white;
      border: 2px solid black;
    }

    .microsoft-signup {
      background-color: white;
      border: 2px solid #CCCCCC;
      color: black;
    }

    .google-signup {
      background-color: white;
      border: 2px solid #CCCCCC;
      color: black;
    }

        .microsoft-signup img,
        .google-signup img,
        .email-signup img {
          width: 20px;
          height: 20px;
        }

    .already-account {
        text-align: center;
        margin-top: 20px;
        color: black;
        font-size: 15px; 
    }

        .already-account span {
            font-weight: 500;
        }

    .terms {
        text-align: center;
        color: black;
        font-size: 12px;
        margin-top: 20px;
        margin-bottom: 10px;
    }

        .terms span {
            font-weight: 500;
        }
  </style>