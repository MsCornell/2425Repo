        align-items: center;
        min-height: 100vh;
        background-color: #809ED3;
    }

    .container {
        width: 100%;
        max-width: 375px;
        height: 100vh;
        position: relative;
        background-color: #809ED3;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .inner-container {
        background-color: white;
        border-radius: 20px;
        width: 100%;
        max-width: 354px;
        padding: 20px;
        position: relative;
        border: 1px solid;
    }

    .header {
        text-align: center;
        color: black;
        font-size: 1.7rem;
        font-weight: 500;
        margin-bottom: 25px;
    }

    .input-label {
        margin-bottom: 5px;
        font-size: 0.95rem;
        color: black;
        display: block;
    }

    .input-container {
        width: 100%;
        margin-bottom: 20px;
        position: relative;
    }

        .input-container img {
            width: 20px;
